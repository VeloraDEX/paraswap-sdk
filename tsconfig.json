{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "allowImportingTsExtensions": false
  }
}
